<nav id="top">
  <style>
<style>
   /* Phone Number Hover Effect */
#top .fa-phone {
  color: #28a745; /* Green color for phone icon */
  font-size: 20px;
  transition: color 0.3s ease, transform 0.3s ease, text-shadow 0.3s ease;
}

#top .fa-phone:hover {
  color: #ffffff; /* White color for the phone icon */
  transform: scale(1.1); /* Slightly enlarge the icon */
  text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.3); /* Adds a subtle shadow */
}

/* Phone Number Text Hover Effect */
#top .hidden-xs.hidden-sm.hidden-md.telephone {
  color: #e74c3c; /* Red color for phone number text */
  font-size: 16px;
  transition: color 0.3s ease, font-weight 0.3s ease, transform 0.3s ease;
}

#top .hidden-xs.hidden-sm.hidden-md.telephone:hover {
  color: #ffffff; /* White color when hovered */
  font-weight: bold; /* Make text bold */
  transform: scale(1.05); /* Slightly enlarge text on hover */
}

/* My Account Hover Effect */
#top .fa-user {
  color: #3498db; /* Blue color for account icon */
  font-size: 20px;
  transition: color 0.3s ease, transform 0.3s ease, text-shadow 0.3s ease;
}

#top .fa-user:hover {
  color: #ffffff; /* White color for account icon */
  transform: scale(1.1); /* Slightly enlarge the icon */
  text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.3); /* Adds a subtle shadow */
}

/* My Account Text Hover Effect */
#top .hidden-xs.hidden-sm.hidden-md.account-text {
  color: #3498db; /* Blue color for account text */
  font-size: 16px;
  transition: color 0.3s ease, font-weight 0.3s ease, transform 0.3s ease;
}

#top .hidden-xs.hidden-sm.hidden-md.account-text:hover {
  color: #ffffff; /* White color when hovered */
  font-weight: bold; /* Make text bold */
  transform: scale(1.05); /* Slightly enlarge text on hover */
}

/* Shopping Cart Hover Effect */
#top .fa-shopping-cart {
  color: #f39c12; /* Orange color for cart icon */
  font-size: 20px;
  transition: color 0.3s ease, transform 0.3s ease, text-shadow 0.3s ease;
}

#top .fa-shopping-cart:hover {
  color: #ffffff; /* White color for the cart icon */
  transform: scale(1.1); /* Slightly enlarge the icon */
  text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.3); /* Adds a subtle shadow */
}

/* Shopping Cart Text Hover Effect */
#top .hidden-xs.hidden-sm.hidden-md.cart-text {
  color: #e74c3c; /* Red color for cart text */
  font-size: 16px;
  transition: color 0.3s ease, font-weight 0.3s ease, transform 0.3s ease;
}

#top .hidden-xs.hidden-sm.hidden-md.cart-text:hover {
  color: #ffffff; /* White color when hovered */
  font-weight: bold; /* Make text bold */
  transform: scale(1.05); /* Slightly enlarge text on hover */
}

/* Checkout Icon Hover Effect */
#top .fa-share {
  color: #e74c3c; /* Red color for checkout icon */
  font-size: 20px;
  transition: color 0.3s ease, transform 0.3s ease, text-shadow 0.3s ease;
}

#top .fa-share:hover {
  color: #ffffff; /* White color for the checkout icon */
  transform: scale(1.1); /* Slightly enlarge the icon */
  text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.3); /* Adds a subtle shadow */
}

/* Checkout Text Hover Effect */
#top .hidden-xs.hidden-sm.hidden-md.checkout-text {
  color: #e74c3c; /* Red color for checkout text */
  font-size: 16px;
  transition: color 0.3s ease, font-weight 0.3s ease, transform 0.3s ease;
}

#top .hidden-xs.hidden-sm.hidden-md.checkout-text:hover {
  color: #ffffff; /* White color when hovered */
  font-weight: bold; /* Make text bold */
  transform: scale(1.05); /* Slightly enlarge text on hover */
}
</style>

